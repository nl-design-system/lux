{
  "name": "@lux-design-system/community-design-tokens",
  "version": "1.0.0",
  "description": "Design tokens wrapper that extends @rijkshuisstijl-community/design-tokens with custom overrides for Tokens Studio",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all clean build:merge build:tokens",
    "clean": "rimraf dist/ figma.tokens.json",
    "build:merge": "node scripts/merge-tokens.js",
    "build:tokens": "style-dictionary build",
    "dev": "npm-run-all build:merge && chokidar \"src/**/*.json\" -c \"npm run build:merge\"",
    "design": "npm-run-all sync:from-figma && chokidar \"figma.tokens.json\" -c \"npm run sync:from-figma\"",
    "sync:from-figma": "node scripts/sync-from-figma.js",
    "sync:to-figma": "node scripts/sync-to-figma.js",
    "watch": "npm run dev",
    "lint": "eslint scripts/**/*.js",
    "lint:fix": "eslint scripts/**/*.js --fix"
  },
  "keywords": [
    "design-tokens",
    "figma",
    "tokens-studio",
    "nl-design-system",
    "rijkshuisstijl"
  ],
  "author": "Logius",
  "license": "SEE LICENSE IN LICENSE.md",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@rijkshuisstijl-community/design-tokens": "^5.0.0",
    "style-dictionary": "^4.0.0"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist/",
    "figma.tokens.json"
  ]
}
