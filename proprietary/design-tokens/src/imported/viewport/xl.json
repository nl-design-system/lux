{
  "figma": {
    "rijkslint": {
      "variant": {
        "parent": "viewport (beta)/xl",
        "description": "",
        "$type": "text",
        "$value": "default"
      }
    },
    "screen-size": {
      "parent": "viewport (beta)/xl",
      "description": "",
      "$type": "sizing",
      "$value": "90rem"
    },
    "viewport": {
      "size": {
        "icon": {
          "wrapper-height": {
            "parent": "viewport (beta)/xl",
            "$type": "sizing",
            "$value": "1.75rem"
          }
        }
      }
    }
  },
  "lux": {
    "grid": {
      "gutter": {
        "parent": "viewport (beta)/xl",
        "description": "",
        "$type": "spacing",
        "$value": "2rem"
      },
      "margin": {
        "parent": "viewport (beta)/xl",
        "description": "",
        "$type": "spacing",
        "$value": "2.5rem"
      }
    }
  },
  "viewport": {
    "font-size": {
      "heading": {
        "level-1": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.xl}"
        },
        "level-2": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.lg}"
        },
        "level-3": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.md}"
        },
        "level-4": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.sm}"
        }
      },
      "body": {
        "default": {
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.sm}"
        },
        "large": {
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.md}"
        },
        "small": {
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.xs}"
        }
      }
    },
    "line-height": {
      "heading": {
        "level-1": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.xl}"
        },
        "level-2": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.lg}"
        },
        "level-3": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.md}"
        },
        "level-4": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.sm}"
        }
      },
      "body": {
        "default": {
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.sm}"
        },
        "large": {
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.md}"
        },
        "small": {
          "$type": "lineHeights",
          "$value": "{lux.line-height.large-scale.xs}"
        }
      }
    },
    "rijkslint": {
      "wordmark": {
        "75%": {
          "padding-block-start": {
            "parent": "viewport (beta)/xl",
            "description": "",
            "$type": "spacing",
            "$value": "2.5rem"
          }
        },
        "default": {
          "padding-block-start": {
            "parent": "viewport (beta)/xl",
            "description": "",
            "$type": "spacing",
            "$value": "3.125rem"
          }
        }
      }
    }
  }
}