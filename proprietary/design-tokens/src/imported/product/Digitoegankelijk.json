{
  "lux": {
    "color": {
      "brand": {
        "default": {
          "parent": "product/Logius",
          "$type": "color",
          "$value": "{lux.color.violet.500}",
          "$description": "kleur van het product"
        },
        "subdued": {
          "parent": "product/Logius",
          "$type": "color",
          "$value": "{lux.color.violet.50}",
          "$description": "Subtiele kleur van het product"
        },
        "hover": {
          "parent": "product/Logius",
          "$type": "color",
          "$value": "{lux.color.violet.700}",
          "$description": "Hover kleur van het product"
        }
      }
    },
    "border-radius": {
      "default": {
        "parent": "product/Logius",
        "$type": "borderRadius",
        "$value": "4px"
      }
    },
    "focus": {
      "outline-width": {
        "parent": "product/Logius",
        "$type": "borderWidth",
        "$value": "2px"
      },
      "outline": {
        "style": {
          "$type": "other",
          "$value": "solid"
        }
      }
    },
    "font-family": {
      "primary": {
        "$type": "fontFamilies",
        "$value": "{ro.font-family.primary}"
      }
    },
    "size": {
      "target": {
        "$type": "sizing",
        "$value": "3rem",
        "$description": "Gebruik deze als minimale hit erea. Bijvoorbeeld als min-height en min-width bij de button. "
      }
    },
    "font-size": {
      "body": {
        "small": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{viewport.font-size.body.small}"
        },
        "default": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{viewport.font-size.body.default}"
        },
        "large": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{viewport.font-size.body.large}"
        }
      },
      "heading": {
        "level-1": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{viewport.font-size.heading.level-1}"
        },
        "level-2": {
          "parent": "viewport (beta)/xl",
          "$type": "fontSizes",
          "$value": "{viewport.font-size.heading.level-2}"
        },
        "level-3": {
          "$type": "fontSizes",
          "$value": "{viewport.font-size.heading.level-3}"
        },
        "level-4": {
          "$type": "fontSizes",
          "$value": "{viewport.font-size.heading.level-4}"
        },
        "level-5": {
          "$type": "fontSizes",
          "$value": "{viewport.font-size.heading.level-4}"
        }
      }
    },
    "line-height": {
      "body": {
        "small": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{viewport.line-height.body.small}"
        },
        "default": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{viewport.line-height.body.default}"
        },
        "large": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{viewport.line-height.body.large}"
        }
      },
      "heading": {
        "level-1": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{viewport.line-height.heading.level-1}"
        },
        "level-2": {
          "parent": "viewport (beta)/xl",
          "$type": "lineHeights",
          "$value": "{viewport.line-height.heading.level-2}"
        },
        "level-3": {
          "$type": "lineHeights",
          "$value": "{viewport.line-height.heading.level-3}"
        },
        "level-4": {
          "$type": "lineHeights",
          "$value": "{viewport.line-height.heading.level-4}"
        },
        "level-5": {
          "$type": "lineHeights",
          "$value": "{viewport.line-height.heading.level-4}"
        }
      }
    }
  },
  "figma": {
    "focus": {
      "outline-radius": {
        "parent": "product/Logius",
        "$type": "borderRadius",
        "$value": "6px"
      }
    },
    "size": {
      "icon": {
        "wrapper-height": {
          "$type": "sizing",
          "$value": "{figma.viewport.size.icon.wrapper-height}"
        }
      }
    },
    "product": {
      "$type": "text",
      "$value": "Digitoegankelijk"
    }
  },
  "product": {
    "button": {
      "secondary": {
        "background-color": {
          "parent": "product/Logius",
          "description": "",
          "$type": "color",
          "$value": "{lux.color.none}"
        },
        "border-color": {
          "parent": "product/Logius",
          "description": "",
          "$type": "color",
          "$value": "{lux.color.brand.default}"
        },
        "color": {
          "parent": "product/Logius",
          "description": "",
          "$type": "color",
          "$value": "{lux.color.brand.default}"
        },
        "hover": {
          "border-color": {
            "parent": "product/Logius",
            "description": "",
            "$type": "color",
            "$value": "{lux.color.brand.hover}"
          },
          "color": {
            "parent": "product/Logius",
            "description": "",
            "$type": "color",
            "$value": "{lux.color.brand.hover}"
          },
          "background-color": {
            "parent": "product/Logius",
            "description": "",
            "$type": "color",
            "$value": "{lux.color.brand.subdued}"
          }
        }
      },
      "tertiary": {
        "color": {
          "parent": "product/Logius",
          "description": "",
          "$type": "color",
          "$value": "{lux.color.brand.default}"
        },
        "hover": {
          "color": {
            "parent": "product/Logius",
            "description": "",
            "$type": "color",
            "$value": "{lux.color.brand.hover}"
          },
          "background-color": {
            "parent": "product/Logius",
            "description": "",
            "$type": "color",
            "$value": "{lux.color.brand.subdued}"
          }
        }
      },
      "font-size": {
        "$type": "fontSizes",
        "$value": "{lux.font-size.large-scale.sm}"
      },
      "primary": {
        "font-size": {
          "$type": "fontSizes",
          "$value": "{lux.font-size.large-scale.sm}"
        }
      }
    }
  }
}