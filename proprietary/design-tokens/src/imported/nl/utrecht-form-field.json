{
  "utrecht": {
    "form-field": {
      "invalid": {
        "border-inline-start-color": {
          "$type": "color",
          "$value": "{lux.color.feedback.error.default}"
        },
        "border-inline-start-width": {
          "$type": "borderWidth",
          "$value": "{lux.border-width.m}"
        },
        "padding-inline-start": {
          "$type": "spacing",
          "$value": "{lux.space.200}"
        }
      },
      "row-gap": {
        "$type": "spacing",
        "$value": "{lux.space.100}"
      }
    }
  }
}